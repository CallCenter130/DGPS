---
import BaseLayout from '../layouts/BaseLayout.astro';
import FeatureIcon from '../components/icons/FeatureIcon.astro'; // Reutilizamos el componente de iconos
import Link from '../components/Link.astro';
---

<BaseLayout
  title="Dirección General de Previsión Social | Ministerio de Trabajo y Previsión Social"
  description="Portal oficial de la Dirección General de Previsión Social, dedicado a la gestión y prevención de riesgos laborales para garantizar un entorno de trabajo seguro y digno para todos los salvadoreños."
>
  <!-- =============================================== -->
<!-- 1. HERO SECTION: Con Banner de Fondo -->
<!-- =============================================== -->
<section class="relative text-white">
    <!-- Contenedor de la Imagen de Fondo -->
    <div class="absolute inset-0">
        <img 
            src={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/images/hero-banner.png`} 
            alt="Fondo de la Dirección General de Previsión Social" 
            class="w-full h-full object-cover"
        >
        <!-- Capa oscura para mejorar legibilidad del texto -->
        <div class="absolute inset-0 bg-primary opacity-80"></div>
    </div>

    <!-- Contenido Superpuesto -->
    <div class="relative container mx-auto px-4 py-24 md:py-32 flex flex-col items-left text-left">
        <div class="flex items-center mb-6">
          <img 
                  src={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/images/logoMTPS1.png`} 
                  alt="Escudo de El Salvador" 
                  class="h-25 w-auto mr-4"
              >
        </div>

        <!-- Título Principal -->
        <h3 class="font-display text-4xl md:text-5xl font-bold leading-tight">
            Dirección General de <br>Previsión Social
        </h3>

        <!-- Subtítulo -->        <p class="mt-4 text-lg md:text-xl text-gray-200">
            Trabajando por la seguridad y salud de los trabajadores de El Salvador.
        </p>

    </div>
</section>

  <!-- ======================================================= -->
  <!-- 2. SECCIÓN DE ACCESOS DIRECTOS: Funcional y Clara -->
  <!-- ======================================================= -->
  <section class="py-20 bg-light">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-primary">Servicios y Gestiones Principales</h2>
        <p class="mt-4 text-lg text-gray-600">Acceda directamente a nuestros sistemas y programas de gestión.</p>
      </div>

      <div id="servicios-link" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  <!-- Tarjeta 1: Riesgo Psicosocial -->
  <Link 
    href="//RiesgoPsicosocial" 
    class="block bg-white p-8 rounded-lg border border-gray-200 hover:border-primary hover:shadow-lg transition-all duration-300"
  >
    <FeatureIcon icon="brain" />
    <h3 class="text-xl font-bold text-dark mt-4 mb-2">Riesgo Psicosocial</h3>
    <p class="text-gray-600">Recursos y herramientas para la gestión del bienestar mental en el entorno laboral.</p>
  </Link>

      <!-- Tarjeta 2: SSO -->
      <Link 
        href="//sso" 
        class="block bg-white p-8 rounded-lg border border-gray-200 hover:border-primary hover:shadow-lg transition-all duration-300"
      >
        <FeatureIcon icon="shield-check" />
        <h3 class="text-xl font-bold text-dark mt-4 mb-2">Seguridad y Salud Ocupacional</h3>
        <p class="text-gray-600">Consulte políticas, programas y la organización de los Comités de SSO.</p>
      </Link>

      <!-- Tarjeta 3: SNNAT -->
      <Link 
        href="//sistema-snnat" 
        class="block bg-white p-8 rounded-lg border border-gray-200 hover:border-primary hover:shadow-lg transition-all duration-300"
      >
        <FeatureIcon icon="gavel" />
        <h3 class="text-xl font-bold text-dark mt-4 mb-2">Sistema SNNAT</h3>
        <p class="text-gray-600">Plataforma para la notificación de accidentes de trabajo y enfermedades profesionales.</p>
      </Link>
    </div>
    </div>
  </section>

  <!-- ========================================================== -->
  <!-- 3. SECCIÓN DE ANUNCIO O NOTICIA DESTACADA -->
  <!-- ========================================================== -->
  <section class="py-20 bg-white">
     <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-5 gap-8 items-center">
        <!-- Imagen Destacada -->
        <div class="md:col-span-2">
          <img src={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/images/trabajadores-industria.jpg`} alt="Trabajadores en un entorno seguro" class="rounded-lg shadow-xl w-full h-auto object-cover">
        </div>
        <!-- Texto del Anuncio -->
        <div class="md:col-span-3">
          <span class="text-accent font-bold uppercase">Compromiso Nacional</span>
          <h2 class="font-display text-3xl md:text-4xl font-bold text-primary mt-2">Construyendo un Futuro Laboral Seguro</h2>
          <p class="mt-4 text-lg text-gray-700 leading-relaxed">
            El Gobierno de El Salvador, a través del Ministerio de Trabajo y Previsión Social, reafirma su compromiso con la clase trabajadora mediante la modernización de los sistemas de gestión de riesgos. Nuestro objetivo es claro: reducir la siniestralidad laboral y promover una cultura de prevención que beneficie a empleadores y trabajadores por igual.
          </p>
          <div class="mt-6">
             <a href="https://www.mtps.gob.sv/" target="_blank" rel="noopener noreferrer" class="font-semibold text-primary hover:text-accent transition">
                Conozca más sobre el Ministerio de Trabajo &rarr;
            </a>
          </div>
        </div>
     </div>
  </section>

  <!-- ======================================================== -->
  <!-- 4. SECCIÓN DE ENLACES DE INTERÉS -->
  <!-- ======================================================== -->
  <section class="bg-primary text-white">
    <div class="container mx-auto px-4 py-16">
      <h2 class="font-display text-3xl font-bold text-center mb-8">Enlaces Institucionales</h2>
      <div id="institucion-link" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 text-center">
        
        <!-- 2. Reemplaza cada <a> con el componente <Link> -->
        <Link href="//peritos" class="bg-white/10 p-6 rounded-lg hover:bg-white/20 transition">
            <p class="font-semibold">Peritos y Empresas Acreditadas</p>
        </Link>
        
        <Link href="//generadores-vapor" class="bg-white/10 p-6 rounded-lg hover:bg-white/20 transition">
            <p class="font-semibold">Generadores de Vapor</p>
        </Link>
        
        <Link href="//formacion" class="bg-white/10 p-6 rounded-lg hover:bg-white/20 transition">
            <p class="font-semibold">Centro de Normativas</p>
        </Link>
        
        <Link href="//conectate" class="bg-white/10 p-6 rounded-lg hover:bg-white/20 transition">
            <p class="font-semibold">Contacto y Oficinas</p>
        </Link>
        
      </div>
    </div>
  </section>

  <section class="py-2 bg-light">
    <div class="container mx-auto text-center">
      <br><br>  
      <button
            @click="$dispatch('start-tutorial')"
            class="inline-block bg-accent text-primary font-bold py-3 px-6 rounded-md shadow-md hover:bg-yellow-600 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1"
        >
            Reiniciar Tour Guiado
        </button>
    </div>
</section>

</BaseLayout>
