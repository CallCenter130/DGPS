---
import BaseLayout from '../layouts/BaseLayout.astro';

// Definimos los recursos en un array para mantener el código limpio y escalable
const recursos = [
    {
        titulo: "Sistemas de gestión de la calidad ISO 9001:2015",
        descripcion: "Acceda a la documentación oficial de la norma ISO 9001 para la optimización de procesos y garantía de calidad, directamente desde la Plataforma de Navegación en Línea de ISO.",
        url: "https://www.iso.org/obp/ui/es/#iso:std:iso:9001:ed-5:v1:es",
        etiquetaBoton: "Consultar Norma ISO 9001"
    },
    {
        titulo: "Sistemas de gestión antisoborno ISO 37001",
        descripcion: "Consulte la norma ISO 37001, el estándar internacional para implementar, mantener y mejorar un sistema de gestión de cumplimiento para prevenir el soborno.",
        url: "https://www.iso.org/obp/ui#iso:std:iso:37001:ed-1:v1:es",
        etiquetaBoton: "Consultar Norma ISO 37001"
    },
    {
        titulo: "Formación en Materia Laboral (Regulación Española)",
        descripcion: "Explore el portal de materias del Instituto Nacional de Seguridad y Salud en el Trabajo de España (INSST), una fuente completa de recursos sobre prevención de riesgos laborales.",
        url: "https://www.insst.es/materias",
        etiquetaBoton: "Visitar Portal INSST"
    }
];
---
<BaseLayout 
    title="Formación y Normativas | DGPS"
    description="Centro de recursos con acceso a normativas ISO y material de formación en materia laboral."
>
    <section class="py-16 bg-light">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
            
            <div class="text-center mb-12">
                <h1 class="font-display text-4xl md:text-5xl font-bold text-primary">
                    Centro de Formación y Normativas
                </h1>
                <p class="mt-4 text-lg text-gray-600">
                    Acceso directo a recursos y normativas clave de fuentes oficiales.
                </p>
            </div>

            <!-- Lista Ejecutiva de Recursos -->
            <div class="space-y-8">
                {recursos.map(recurso => (
                    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-accent transition-all duration-300 hover:shadow-xl hover:border-primary">
                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
                            <!-- Columna de Información -->
                            <div class="flex-1 mb-4 sm:mb-0 sm:pr-6">
                                <h2 class="text-xl font-bold text-dark mb-2">{recurso.titulo}</h2>
                                <p class="text-gray-600">{recurso.descripcion}</p>
                            </div>
                            <!-- Columna del Botón -->
                            <div class="flex-shrink-0">
                                <a 
                                    href={recurso.url} 
                                    target="_blank" 
                                    rel="noopener noreferrer" 
                                    class="inline-block bg-primary text-white font-bold py-3 px-6 rounded-md hover:bg-opacity-80 transition-colors"
                                >
                                    {recurso.etiquetaBoton}
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>

        </div>
    </section>
</BaseLayout>