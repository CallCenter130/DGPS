---
import BaseLayout from '../../layouts/BaseLayout.astro';

// URL de "embed" para Prezi. Se obtiene desde la opción "Embed" en Prezi.
const preziEmbedUrl = "https://prezi.com/view/IKDkxmAKRIRdADK0sGIG/embed";
---
<BaseLayout 
    title="Riesgo Psicosocial: Presentación Interactiva | DGPS"
    description="Explora nuestra presentación interactiva sobre la gestión, impacto y soluciones para el riesgo psicosocial en el entorno laboral."
>
    <section class="py-12 bg-light">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">

            <div class="text-center mb-10">
                <h1 class="font-display text-4xl md:text-5xl font-bold text-primary">
                    Riesgo Psicosocial en la Era Digital
                </h1>
                <p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
                    Navegue a través de nuestra presentación interactiva para comprender a fondo los desafíos y soluciones.
                </p>
            </div>

            <!-- Contenedor Responsivo para la Presentación de Prezi -->
            <div class="max-w-6xl mx-auto aspect-video bg-gray-200 rounded-lg shadow-2xl overflow-hidden border-4 border-white">
                <iframe 
                    src={preziEmbedUrl}
                    id="iframe_container" 
                    frameborder="0" 
                    allowfullscreen="" 
                    allow="autoplay; fullscreen"
                    title="Presentación sobre Riesgo Psicosocial"
                    class="w-full h-full"
                ></iframe>
            </div>
            
            <div class="text-center mt-6">
                <a href="https://prezi.com/view/IKDkxmAKRIRdADK0sGIG/" target="_blank" rel="noopener noreferrer" class="text-sm text-gray-500 hover:text-primary underline transition-colors">
                    ¿Problemas para visualizar? Abre la presentación en una nueva pestaña.
                </a>
            </div>

        </div>
    </section>
</BaseLayout>