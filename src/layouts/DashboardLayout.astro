---
// Suponiendo que este archivo es algo como src/layouts/DashboardLayout.astro
import BaseLayout from './BaseLayout.astro'; // Aseg√∫rate de que la ruta es correcta
import Sidebar from '../components/Sidebar.astro';
import Header from '../components/Header.astro';

// Define las props que este layout espera.
// Probablemente sean las mismas que las de BaseLayout.
interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<!-- Ahora, en lugar de pasar TODO, pasamos solo lo que BaseLayout necesita -->
<BaseLayout title={title} description={description}>
    <div class="flex h-screen bg-gray-100">
        <Sidebar />
        <div class="flex-1 flex flex-col overflow-hidden">
            <Header />
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
                <div class="container mx-auto px-6 py-8">
                    <slot />
                </div>
            </main>
        </div>
    </div>
</BaseLayout>